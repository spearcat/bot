{
	"name": "@skyware/bot",
	"description": "A framework for building bots on Bluesky.",
	"type": "module",
	"version": "0.3.7",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "MPL-2.0",
	"repository": "https://github.com/skyware-js/bot",
	"homepage": "https://skyware.js.org",
	"keywords": [
		"bluesky",
		"bot",
		"atproto",
		"skyware"
	],
	"scripts": {
		"build": "tsc",
		"fmt": "dprint fmt",
		"lint": "eslint . --ext .ts --fix; typedoc --emit none --treatValidationWarningsAsErrors",
		"rm-ts-in-deps": "find node_modules -type f -name '*.ts' ! -name '*.d.ts' -delete",
		"prepublishOnly": "pnpm fmt && pnpm lint && pnpm rm-ts-in-deps && pnpm build"
	},
	"dependencies": {
		"@atcute/bluesky": "^1.0.7",
		"@atcute/bluesky-richtext-builder": "^1.0.1",
		"@atcute/client": "^2.0.3",
		"@atcute/ozone": "^1.0.5",
		"quick-lru": "^7.0.0",
		"rate-limit-threshold": "^0.1.5"
	},
	"devDependencies": {
		"@types/node": "^20.11.26",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"dprint": "^0.41.0",
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-unused-imports": "^3.1.0",
		"multiformats": "^13.1.0",
		"typedoc": "^0.26.7",
		"typescript": "^5.4.2"
	},
	"optionalDependencies": {
		"@skyware/firehose": "^0.3.2",
		"@skyware/jetstream": "^0.1.9"
	},
	"files": [
		"dist"
	]
}
